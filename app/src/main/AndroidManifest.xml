<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.gloriadeocooperative.tragic_eight_ball">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".TragicEightBallApplication"
        android:theme="@style/Theme.TragicEightBall">
        <activity
            android:name=".AnswerDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".ThinkingActivity"
            android:exported="false"
            android:label="@string/title_activity_thinking"
            android:theme="@style/Theme.TragicEightBall.NoActionBar" />
        <activity
            android:name=".AskQuestion2"
            android:exported="false" />
        <activity
            android:name=".UserAnswersActivity"
            android:exported="false" />
        <activity
            android:name=".IntroductionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
